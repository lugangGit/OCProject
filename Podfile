source 'https://github.com/CocoaPods/Specs.git'
# Uncomment the next line to define a global platform for your project
# platform :ios, '9.0'

target 'OC-Project' do
  # Comment the next line if you don't want to use dynamic frameworks
  use_frameworks!
  pod 'AFNetworking'
  pod 'SDWebImage'
  pod 'FMDB'
  pod 'Masonry'
  pod 'MJRefresh'
  pod 'MJExtension'
  pod 'JKCategories'
  pod 'MBProgressHUD'
  #pod 'ReactiveCocoa'
  #pod 'TZImagePickerController'
  #pod 'IQKeyboardManager'
  #pod 'JKCategories'
  
  #友盟
  pod 'UMCommon'
  pod 'UMDevice'
  pod 'UMAPM'
  pod 'UMABTest'
  pod 'UMCCommonLog'

  pod 'UMPush'

  # U-Share SDK UI模块（分享面板，建议添加）
  pod 'UMShare/UI'
  # 集成微信(完整版14.4M)
  pod 'UMShare/Social/WeChat'
  # 集成QQ/QZone/TIM(完整版7.6M)
  pod 'UMShare/Social/QQ'
  # 集成新浪微博(完整版25.3M)
  pod 'UMShare/Social/Sina'
  
  target 'OC-ProjectTests' do
    inherit! :search_paths
    # Pods for testing
  end

  target 'OC-ProjectUITests' do
    inherit! :search_paths
    # Pods for testing
  end

end


# 只更新新添加的库
# pod install --verbose --no-repo-update

# 该命令只更新指定的库，其它库忽略
# pod update 库名 --verbose --no-repo-update

# 更新指定第三方库
# pod update 库名

# 把Podfile内全部的库更新重新安装
# pod install


